generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_PUBLIC_URL")
}

model User {
  id             String          @id @default(uuid())
  email          String          @unique
  passwordHash   String?
  googleSub      String?         @unique
  name           String?
  emailVerified  Boolean         @default(false)
  verificationToken String?
  verificationSentAt DateTime?
  createdAt      DateTime        @default(now())
  players        Player[]
  matches        Match[]
  communityPosts CommunityPost[]
}

model Player {
  id           String  @id @default(uuid())
  user         User    @relation(fields: [userId], references: [id])
  userId       String
  name         String
  attack       Float
  defense      Float
  physical     Float
  isGoalkeeper Boolean  @default(false)
  updatedAt    DateTime @updatedAt

  @@unique([userId, name], name: "userId_name")
}

model Match {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  time      BigInt
  titleA    String
  titleB    String
  teamA     Json
  teamB     Json
  result    String   @default("")
  updatedAt DateTime @updatedAt
}

model CommunityPost {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  userName  String
  sport     String
  available Int
  total     Int
  message   String
  locality  String
  time      BigInt
  createdAt DateTime @default(now())
  messages  Message[]
  groupMessages PostMessage[]
}

model Message {
  id         String   @id @default(uuid())
  fromUserId String
  toUserId   String
  fromName   String
  toName     String
  text       String
  time       BigInt
  post       CommunityPost? @relation(fields: [postId], references: [id])
  postId     String?
  createdAt  DateTime @default(now())
}

model PostMessage {
  id         String   @id @default(uuid())
  post       CommunityPost @relation(fields: [postId], references: [id])
  postId     String
  fromUserId String
  fromName   String
  text       String
  time       BigInt
  createdAt  DateTime @default(now())
}
