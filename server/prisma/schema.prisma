generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String          @id @default(uuid())
  email              String          @unique
  passwordHash       String?
  googleSub          String?         @unique
  name               String?
  emailVerified      Boolean         @default(false)
  verificationToken  String?
  verificationSentAt DateTime?
  createdAt          DateTime        @default(now())
  players            Player[]
  matches            Match[]
  communityPosts     CommunityPost[]
  sentFriendRequests FriendRequest[] @relation("FriendRequest_from")
  receivedRequests   FriendRequest[] @relation("FriendRequest_to")
  friends            Friend[]        @relation("Friend_user")
  friendOf           Friend[]        @relation("Friend_friend")
}

model Player {
  id           String   @id @default(uuid())
  user         User     @relation(fields: [userId], references: [id])
  userId       String
  name         String
  attack       Float
  defense      Float
  physical     Float
  isGoalkeeper Boolean  @default(false)
  updatedAt    DateTime @updatedAt

  @@unique([userId, name], name: "userId_name")
}

model Match {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  time      BigInt
  titleA    String
  titleB    String
  teamA     Json
  teamB     Json
  result    String   @default("")
  updatedAt DateTime @updatedAt
}

model CommunityPost {
  id            String        @id @default(uuid())
  user          User          @relation(fields: [userId], references: [id])
  userId        String
  userName      String
  sport         String
  available     Int
  total         Int
  message       String
  locality      String
  latitude      Float?
  longitude     Float?
  time          BigInt
  createdAt     DateTime      @default(now())
  messages      Message[]
  groupMessages PostMessage[]

  @@index([latitude, longitude])
  @@index([time(sort: Desc)])
}

model Message {
  id         String         @id @default(uuid())
  fromUserId String
  toUserId   String
  fromName   String
  toName     String
  text       String
  time       BigInt
  threadId   String?
  post       CommunityPost? @relation(fields: [postId], references: [id])
  postId     String?
  createdAt  DateTime       @default(now())

  @@index([postId, fromUserId, time])
  @@index([postId, time])
  @@index([postId, toUserId, time])
  @@index([threadId, fromUserId, time])
  @@index([threadId, toUserId, time])
}

model PostMessage {
  id         String        @id @default(uuid())
  post       CommunityPost @relation(fields: [postId], references: [id])
  postId     String
  fromUserId String
  fromName   String
  text       String
  time       BigInt
  createdAt  DateTime      @default(now())
}

model FriendRequest {
  id         String   @id @default(uuid())
  fromUser   User     @relation("FriendRequest_from", fields: [fromUserId], references: [id])
  fromUserId String
  toUser     User     @relation("FriendRequest_to", fields: [toUserId], references: [id])
  toUserId   String
  createdAt  DateTime @default(now())

  @@unique([fromUserId, toUserId])
  @@index([toUserId])
}

model Friend {
  id           String   @id @default(uuid())
  user         User     @relation("Friend_user", fields: [userId], references: [id])
  userId       String
  friend       User     @relation("Friend_friend", fields: [friendUserId], references: [id])
  friendUserId String
  createdAt    DateTime @default(now())

  @@unique([userId, friendUserId])
  @@index([friendUserId])
}
